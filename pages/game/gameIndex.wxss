/* pages/game/gameIndex.wxss */
.page-title {
  padding-top: 20rpx;
  padding-left: 40rpx;
  font-size: 16px;
}
.background{
  z-index:-1;
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
}
.flex-box {
  display: flex;
  
  align-items:center;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing:border-box;
}
.flex-item {
  display: flex;
  font-size: larger;
  
  align-items:center;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 10rpx;
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  color: darkslategray;
  font-weight: bolder;

}


.theme{
  width: 50%;
  display: flex;
  justify-content: center;
  /* border-radius: 2px #1d1111; */
}
.theme image {
  width: 260rpx;height:260rpx;
  border:1px solid #666666;
  border-radius: 14rem;
}