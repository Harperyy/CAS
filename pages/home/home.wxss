/* pages/home/home.wxss */
.page-title {
  padding-top: 20rpx;
  padding-left: 40rpx;
  font-size: 32px;
}
.background{
  z-index:-1;
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
}
.flex-box {
  display: block;
  align-items:center;
  flex-wrap: wrap;
  justify-content: space-between;

  box-sizing:border-box;
}
.flex-item {
  width: 100%;
  height: 500rpx;
  padding: 100rpx;
  box-sizing:border-box;
  font-size: 100rpx;
  color: rgb(5, 37, 27);
}
.item {
  width:100%;
  height:100%;
  border-radius:8rpx;
  display: flex;
  align-items:center;
  justify-content: center;
  color: #fff;
}
.item-last {
  flex: 1;
}